{% doc %}
  @prompt
    generate a auto scroll section with height 60px with red back background containing 12 13 tabs without any space in between them
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-auto-scroll-container-{{ ai_gen_id }} {
    height: 60px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
    position: relative;
    width: 100%;
    display: flex;
  }

  .ai-auto-scroll-track-{{ ai_gen_id }} {
    display: flex;
    height: 100%;
    overflow: hidden;
    animation: ai-auto-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    width: 200%;
    flex-shrink: 0;
  }

  .ai-auto-scroll-tab-{{ ai_gen_id }} {
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    white-space: nowrap;
    padding: 0 {{ block.settings.tab_padding }}px;
    min-width: {{ block.settings.min_tab_width }}px;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .ai-auto-scroll-tab-{{ ai_gen_id }}:nth-child(13) {
    border-right: none;
  }

  @keyframes ai-auto-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-auto-scroll-container-{{ ai_gen_id }}:hover .ai-auto-scroll-track-{{ ai_gen_id }} {
    animation-play-state: {{ block.settings.pause_on_hover | default: true | ternary: 'paused', 'running' }};
  }
{% endstyle %}

<auto-scroll-tabs-{{ ai_gen_id }}
  class="ai-auto-scroll-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-auto-scroll-track-{{ ai_gen_id }}">
    {% for i in (1..13) %}
      {% liquid
        assign tab_text_key = 'tab_' | append: i | append: '_text'
        assign tab_link_key = 'tab_' | append: i | append: '_link'
        assign tab_text = block.settings[tab_text_key]
        assign tab_link = block.settings[tab_link_key]
      %}
      
      {% if tab_text != blank %}
        {% if tab_link != blank %}
          <a href="{{ tab_link }}" class="ai-auto-scroll-tab-{{ ai_gen_id }}">
            {{ tab_text }}
          </a>
        {% else %}
          <div class="ai-auto-scroll-tab-{{ ai_gen_id }}">
            {{ tab_text }}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
    
    {% for i in (1..13) %}
      {% liquid
        assign tab_text_key = 'tab_' | append: i | append: '_text'
        assign tab_link_key = 'tab_' | append: i | append: '_link'
        assign tab_text = block.settings[tab_text_key]
        assign tab_link = block.settings[tab_link_key]
      %}
      
      {% if tab_text != blank %}
        {% if tab_link != blank %}
          <a href="{{ tab_link }}" class="ai-auto-scroll-tab-{{ ai_gen_id }}">
            {{ tab_text }}
          </a>
        {% else %}
          <div class="ai-auto-scroll-tab-{{ ai_gen_id }}">
            {{ tab_text }}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</auto-scroll-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class AutoScrollTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-auto-scroll-track-{{ ai_gen_id }}');
        this.tabs = this.querySelectorAll('.ai-auto-scroll-tab-{{ ai_gen_id }}');
        
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', (event) => {
            if (!tab.href) {
              event.preventDefault();
            }
          });
        });
      }
    }

    customElements.define('auto-scroll-tabs-{{ ai_gen_id }}', AutoScrollTabs{{ ai_gen_id }});
  })();
</script>

