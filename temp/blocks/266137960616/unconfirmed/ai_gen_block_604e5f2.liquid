{% doc %}
  @prompt
    create a auto moving section with  height 25px which create 12 13 tabs without zero space in between
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-auto-tabs-{{ ai_gen_id }} {
    width: 100%;
    height: 25px;
    overflow: hidden;
    position: relative;
    background-color: {{ block.settings.background_color }};
  }

  .ai-auto-tabs-track-{{ ai_gen_id }} {
    display: flex;
    height: 100%;
    animation: ai-auto-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-auto-tabs-track-{{ ai_gen_id }}:hover {
    animation-play-state: {{ block.settings.pause_on_hover | default: true }};
  }

  .ai-auto-tabs-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    height: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.tab_background_color }};
    color: {{ block.settings.tab_text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    padding: 0 {{ block.settings.tab_padding }}px;
    white-space: nowrap;
    border-right: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    transition: background-color 0.3s ease, color 0.3s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .ai-auto-tabs-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_background_color }};
    color: {{ block.settings.tab_hover_text_color }};
  }

  .ai-auto-tabs-item-{{ ai_gen_id }}:last-child {
    border-right: none;
  }

  @keyframes ai-auto-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  {% if block.settings.pause_on_hover %}
    .ai-auto-tabs-track-{{ ai_gen_id }}:hover {
      animation-play-state: paused;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-auto-tabs-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
      padding: 0 {{ block.settings.tab_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<auto-tabs-{{ ai_gen_id }}
  class="ai-auto-tabs-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-auto-tabs-track-{{ ai_gen_id }}">
    {% for i in (1..13) %}
      {% liquid
        assign tab_text_key = 'tab_' | append: i | append: '_text'
        assign tab_link_key = 'tab_' | append: i | append: '_link'
        assign tab_text = block.settings[tab_text_key]
        assign tab_link = block.settings[tab_link_key]
      %}
      
      {% if tab_text != blank %}
        {% if tab_link != blank %}
          <a href="{{ tab_link }}" class="ai-auto-tabs-item-{{ ai_gen_id }}">
            {{ tab_text }}
          </a>
        {% else %}
          <div class="ai-auto-tabs-item-{{ ai_gen_id }}">
            {{ tab_text }}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
    
    {% for i in (1..13) %}
      {% liquid
        assign tab_text_key = 'tab_' | append: i | append: '_text'
        assign tab_link_key = 'tab_' | append: i | append: '_link'
        assign tab_text = block.settings[tab_text_key]
        assign tab_link = block.settings[tab_link_key]
      %}
      
      {% if tab_text != blank %}
        {% if tab_link != blank %}
          <a href="{{ tab_link }}" class="ai-auto-tabs-item-{{ ai_gen_id }}">
            {{ tab_text }}
          </a>
        {% else %}
          <div class="ai-auto-tabs-item-{{ ai_gen_id }}">
            {{ tab_text }}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</auto-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class AutoTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-auto-tabs-track-{{ ai_gen_id }}');
        this.setupInfiniteScroll();
      }

      setupInfiniteScroll() {
        if (!this.track) return;
        
        const items = this.track.children;
        if (items.length === 0) return;

        let totalWidth = 0;
        for (let item of items) {
          totalWidth += item.offsetWidth;
        }

        if (totalWidth < this.offsetWidth) {
          this.track.style.animation = 'none';
        }
      }
    }

    customElements.define('auto-tabs-{{ ai_gen_id }}', AutoTabs{{ ai_gen_id }});
  })();
</script>

