<style>
  .custom-footer {
    background-color: #e32402;
    color: white;
    padding: 30px 0 20px 0;
    margin-top: 0;
  }
  
  .custom-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .custom-footer-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 40px;
  }
  
  .custom-footer-column {
    padding-left: 12px;
    border-left: 3px solid rgba(255, 255, 255, 0.8);
  }
  
  
  .custom-footer-title {
    font-size: 25px;
    font-weight: 700;
    color : white;
    text-transform: uppercase;
    margin-bottom: 20px;
    letter-spacing: 1.5px;
    line-height: 1.1;
  }
  
  .custom-footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .custom-footer-links li {
    margin-bottom: 12px;
  }
  
  .custom-footer-links a {
    color: white;
    text-decoration: none;
    font-size: 16px;
    transition: opacity 0.3s ease;
    line-height: 1.3;
  }
  
  .custom-footer-links a:hover {
    opacity: 0.8;
  }
  
  .custom-footer-social {
    display: flex;
    gap: 12px;
    margin-top: 8px;
  }
  
  .custom-footer-social-icon {
    width: 40px;
    height: 40px;
    background: white;
    border: 2px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }
  
  .custom-footer-social-icon:hover {
    transform: scale(1.1);
  }
  
  .custom-footer-contact {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .custom-footer-contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
    line-height: 1.3;
  }
  
  .custom-footer-contact-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Tablet Responsive */
  @media (max-width: 1024px) {
    .custom-footer-grid {
      gap: 30px;
    }
    
    .custom-footer-column {
      padding-left: 10px;
    }
  }
  
  @media (max-width: 768px) {
    .custom-footer {
      padding: 25px 0 20px 0;
    }
    
    .custom-footer-container {
      padding: 0 20px;
    }
    
    .custom-footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }
    
    .custom-footer-column {
      padding-left: 8px;
    }
    
    .custom-footer-title {
      font-size: 22px;
      margin-bottom: 15px;
    }
    
    .custom-footer-links a {
      font-size: 15px;
    }
    
    .custom-footer-contact-item {
      font-size: 15px;
    }
  }
  
  @media (max-width: 600px) {
    .custom-footer-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .custom-footer-column {
      border-left: none;
      padding-left: 0;
      border-bottom: 3px solid rgba(255, 255, 255, 0.8);
      padding-bottom: 15px;
    }
    
    .custom-footer-column:last-child {
      border-bottom: none;
    }
  }
  
  @media (max-width: 480px) {
    .custom-footer {
      padding: 20px 0 15px 0;
    }
    
    .custom-footer-container {
      padding: 0 15px;
    }
    
    .custom-footer-title {
      font-size: 20px;
      margin-bottom: 12px;
    }
    
    .custom-footer-links a {
      font-size: 14px;
    }
    
    .custom-footer-contact-item {
      font-size: 14px;
    }
    
    .custom-footer-social-icon {
      width: 35px;
      height: 35px;
    }
    
    .custom-footer-social {
      gap: 10px;
    }
  }
  
  @media (max-width: 360px) {
    .custom-footer-container {
      padding: 0 10px;
    }
    
    .custom-footer-title {
      font-size: 18px;
    }
    
    .custom-footer-links a {
      font-size: 13px;
    }
    
    .custom-footer-contact-item {
      font-size: 13px;
    }
  }
</style>

