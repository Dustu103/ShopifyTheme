  function createReviewCard(review, index) {
    const card = document.createElement('div');
    
    // Only first 3 reviews have images
    const hasImage = index < 3;
    card.className = `review-card ${!hasImage ? 'no-image' : ''}`;
    
    let imageHtml = '';
    if (hasImage) {
      imageHtml = `<div class="review-card__product-image" style="background: linear-gradient(135deg, #e32402, #ff6b35); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 1.2rem;">SUPERYOU</div>`;
    }
    
    const verifiedBadge = review.verified ? '<span class="review-card__verified-badge">Verified</span>' : '';
    
    let starsHtml = '';
    for (let i = 1; i <= 5; i++) {
      starsHtml += i <= review.rating ? '★' : '☆';
    }
    
    card.innerHTML = `
      ${imageHtml}
      <div class="review-card__reviewer-name">
        ${review.name}
        ${verifiedBadge}
      </div>
      <div class="review-card__stars">${starsHtml}</div>
      <div class="review-card__text">${review.text}</div>
      <div class="review-card__date">${review.date}</div>
    `;
    
    return card;
  }

  function getColumnHeights() {
    const columns = document.querySelectorAll('.reviews-column');
    return Array.from(columns).map(column => column.offsetHeight);
  }

  function findShortestColumn() {
    const heights = getColumnHeights();
    let shortestIndex = 0;
    let shortestHeight = heights[0];
    
    for (let i = 1; i < heights.length; i++) {
      if (heights[i] < shortestHeight) {
        shortestHeight = heights[i];
        shortestIndex = i;
      }
    }
    
    return shortestIndex;
  }

  function distributeReviews() {
    const columns = document.querySelectorAll('.reviews-column');
    
    // Clear all columns
    columns.forEach(column => column.innerHTML = '');
    
    // Distribute reviews one by one
    for (let i = 0; i < visibleReviews; i++) {
      const review = allReviews[i];
      const card = createReviewCard(review, i);
      
      // Find shortest column
      const shortestColumnIndex = findShortestColumn();
      
      // Add card to shortest column
      columns[shortestColumnIndex].appendChild(card);
    }
  }

  function toggleMoreReviews() {
    const showMoreBtn = document.querySelector('.show-more-btn');
    
    if (!isExpanded) {
      visibleReviews = 16;
      showMoreBtn.textContent = 'Show Less Reviews';
      isExpanded = true;
    } else {
      visibleReviews = 8;
      showMoreBtn.textContent = 'Show More Reviews';
      isExpanded = false;
    }
    
    distributeReviews();
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    distributeReviews();
  });
