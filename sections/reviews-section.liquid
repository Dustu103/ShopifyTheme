{%- style -%}
  .reviews-section {
    padding: 60px 0;
    background: #f8f9fa;
  }

  .reviews-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .reviews-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    text-align: center;
    margin-bottom: 50px;
  }

  .reviews-grid {
    display: flex;
    gap: 20px;
    margin-bottom: 40px;
  }

  .reviews-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .review-card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    position: relative;
    width: 100%;
  }

  .review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  .review-card__product-image {
    width: 100%;
    height: 100px;
    object-fit: cover;
    margin-bottom: 15px;
    border-radius: 8px;
    background: #f8f9fa;
    display: block;
  }

  .review-card.no-image .review-card__reviewer-name {
    margin-top: 0;
  }

  .review-card.no-image .review-card__stars {
    margin-top: 8px;
  }

  .review-card__reviewer-name {
    font-weight: 700;
    color: #333;
    font-size: 1rem;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .review-card__verified-badge {
    background: #e32402;
    color: white;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 0.7rem;
    font-weight: 600;
  }

  .review-card__stars {
    color: #e32402;
    font-size: 1.1rem;
    margin-bottom: 12px;
  }

  .review-card__text {
    font-size: 0.9rem;
    color: #555;
    line-height: 1.5;
    margin-bottom: 12px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .review-card__date {
    font-size: 0.8rem;
    color: #888;
    text-align: right;
    position: absolute;
    bottom: 15px;
    right: 20px;
  }

  .show-more-btn {
    background: #e32402;
    color: white;
    border: none;
    padding: 15px 40px;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    display: block;
    margin: 0 auto;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .show-more-btn:hover {
    background: #c41e02;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(227, 36, 2, 0.3);
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .reviews-grid {
      flex-direction: column;
    }
    
    .reviews-column {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .reviews-section {
      padding: 40px 0;
    }

    .reviews-title {
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .reviews-column {
      grid-template-columns: repeat(2, 1fr);
    }

    .review-card {
      padding: 15px;
    }

    .review-card__product-image {
      height: 80px;
    }
  }

  @media (max-width: 480px) {
    .reviews-column {
      grid-template-columns: 1fr;
    }

    .reviews-container {
      padding: 0 15px;
    }
  }
{%- endstyle -%}

