  .product-title {
    font-size: 14px;
    font-weight: 600;
    color: #333;
    margin: 0 0 0px 0;
    line-height: 1.3;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
