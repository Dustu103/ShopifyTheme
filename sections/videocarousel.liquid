    sliderTrack.style.transition = "transform 0.5s ease-in-out";
    updateSlidePosition();
    if (currentIndex < {{ cloneCount }}) {
      setTimeout(function() {
        sliderTrack.style.transition = "none";
        currentIndex = slides.length - {{ cloneCount }} - 1;
        updateSlidePosition();
        void sliderTrack.offsetWidth;
        sliderTrack.style.transition = "transform 0.5s ease-in-out";
      }, 500);
    }
  }
  
