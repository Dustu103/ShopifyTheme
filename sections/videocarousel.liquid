  function nextSlide() {
    currentIndex++;
    sliderTrack.style.transition = "transform 0.5s ease-in-out";
    updateSlidePosition();
    if (currentIndex >= slides.length - {{ cloneCount }}) {
      setTimeout(function() {
        sliderTrack.style.transition = "none";
        currentIndex = {{ cloneCount }};
        updateSlidePosition();
        void sliderTrack.offsetWidth;
        sliderTrack.style.transition = "transform 0.5s ease-in-out";
      }, 500);
    }
  }
  
  function prevSlide() {
